    <!-- 查询所有数据 -->
    <select id="selectCareerTrack" resultMap="t_archive_career_trackMap" >
        SELECT
        arc.archive_id as archiveId,
        arc.user_category as userCategory,
        orga.org_name as businssUnitName,
        org.org_name as orgName,
        pos.position_name as positionName,
        post.post_name as postName,
        track.change_type as changeType,
        track.change_date as changeDate,
        track.change_reason as changeReason
        FROM t_archive_career_track track
        left join t_user_archive arc on arc.archive_id=track.archive_id and arc.is_delete=0
        left join t_organization org on org.org_id = track.before_org_id and org.is_enable=1
        left join t_organization orga on orga.org_id = track.before_business_unit_id and  orga.is_enable=1
        left join t_post post on post.post_id = track.before_post_id and post.is_enable=1 and post.is_delete=0
        left join t_position pos on pos.position_id = track.before_position_id and pos.is_delete=0
        where track.archive_id=#{id}
    </select>

